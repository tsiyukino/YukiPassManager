<ui:FluentWindow x:Class="YukiManager.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Yuki Manager - Login"
        Width="450" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True">
    
    <Grid>
        <Grid x:Name="RootGrid" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,40,0,0" HorizontalAlignment="Center">
                <ui:SymbolIcon Symbol="LockClosed24" FontSize="48" Margin="0,0,0,20"/>
                <TextBlock Text="Yuki Manager" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Secure Password Manager" FontSize="14" Opacity="0.7" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20,0,0">
                <ui:PasswordBox x:Name="MasterPasswordBox" 
                               PlaceholderText="Master Password"
                               Margin="0,0,0,15"
                               KeyDown="MasterPasswordBox_KeyDown"/>
                
                <ui:Button x:Name="UnlockButton" 
                          Content="Unlock Vault" 
                          HorizontalAlignment="Stretch"
                          Click="UnlockButton_Click"
                          Margin="0,0,0,10"/>
                
                <ui:Button x:Name="CreateVaultButton" 
                          Content="Create New Vault"
                          Appearance="Secondary"
                          HorizontalAlignment="Stretch"
                          Click="CreateVaultButton_Click"
                          Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
        
        <!-- ContentPresenter for dialogs -->
        <ContentPresenter x:Name="DialogPresenter" />
    </Grid>
</ui:FluentWindow>
