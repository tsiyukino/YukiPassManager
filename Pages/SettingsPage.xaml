<Page x:Class="YukiManager.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Settings"
      Background="Transparent">

    <ScrollViewer>
        <Grid Margin="20">
            <StackPanel>
                <!-- Security Section -->
                <ui:Card Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Security" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Change Master Password" FontSize="14" Margin="0,0,0,8"/>
                        <TextBlock Text="Update your master password to keep your vault secure." 
                                  FontSize="12" 
                                  Opacity="0.7" 
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,15"/>
                        
                        <ui:Button Content="Change Master Password"
                                  Icon="{ui:SymbolIcon Key24}"
                                  Click="ChangeMasterPassword_Click"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>
                </ui:Card>
                
                <!-- About Section -->
                <ui:Card Padding="20">
                    <StackPanel>
                        <TextBlock Text="About" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Version: " FontWeight="SemiBold"/>
                            <TextBlock Text="1.0.0"/>
                        </StackPanel>
                        
                        <TextBlock Text="Yuki Manager - Secure Password Manager" 
                                  FontSize="12" 
                                  Opacity="0.7" 
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Your passwords are encrypted with AES-256 encryption and stored locally on your device." 
                                  FontSize="11" 
                                  Opacity="0.6" 
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
